<?xml version="1.0"?>
<ruleset>
    <file>src/Rocketeer</file>
    <arg name="colors"/>
    <arg value="p"/>

    <rule ref="vendor/escapestudios/symfony2-coding-standard/Symfony2">
        <exclude name="Symfony2.Functions.ScopeOrder.Invalid" />
        <exclude name="Zend.NamingConventions.ValidVariableName.NotCamelCaps" />
        <exclude name="Squiz.Strings.ConcatenationSpacing.PaddingFound" />
    </rule>

    <rule ref="Symfony2.Commenting.ClassComment.Missing">
        <exclude-pattern>*ServiceProvider</exclude-pattern>
    </rule>
</ruleset>
